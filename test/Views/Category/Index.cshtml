@model IEnumerable<test.Models.Category>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-center text-primary">Category List</h2>

            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Create">Create New Category</a>
            </div>

        </div>
        
        <br /><br />

        @if(Model.Count()>0)
         { 
            <table class="table table-bordered table-striped " width="100%">
                <thead>
                    <tr>
                        <th> Category Name</th>
                        <th> Display Order</th>
                        <th></th>
                    </tr>
                <thead>
                <tbody>
                    @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="btn-group w-75" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary">Edit Category</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">Delete Category</a>
                            </div>

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }

    </div>